<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="Hr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">#ccc</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Estilo para los Botones. -->
    <style name="ButtonDefault">
        <item name="android:background">@drawable/button_default_selector</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Estilo para los Botones Primarios. -->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>